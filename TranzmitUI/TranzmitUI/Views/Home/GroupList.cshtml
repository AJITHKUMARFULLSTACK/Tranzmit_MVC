

@model IEnumerable<TranzmitUI.Models.GroupMaster>

<DOCTYPE! html>
    <html>
    <head>
        <title>GROUP</title>

        <meta name="viewport" content="width=device-width" />
        <link href="~/Content/Gridmvc.css" rel="stylesheet" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <script src="~/Scripts/gridmvc.js"></script>
        <script src="~/Scripts/jquery-1.9.1.min.js"></script>
        <link href="~/Content/main.css" rel="stylesheet" />
        <script src="~/Content/jquery1.10.1.min.js"></script>


    </head>
    <body style="overflow-x:hidden;">
        <div>
            <div>
                @if (ViewBag.GroupSuccess != null)
                {
                    <script type="text/javascript">

                      window.onload = function () {
                      alert("@ViewBag.GroupSuccess");
                        };
                    </script>
                }
                @if (ViewBag.UpdateSuccess != null)
                {
                    <script type="text/javascript">

                      window.onload = function () {
                      alert("@ViewBag.UpdateSuccess");
                        };
                    </script>
                }

                else if (ViewBag.DeleteSuccess != null)
                {
                    <script type="text/javascript">

                      window.onload = function () {
                      alert("@ViewBag.DeleteSuccess");
                        };
                    </script>
                }

                else if (ViewBag.DeleteFail != null)
                {

                    <script type="text/javascript">

                      window.onload = function () {
                      alert("@ViewBag.DeleteFail");
                        };
                    </script>

                }

            </div>

            <div class="row" style="width: 100%; align-content: center;">
                <div style="width:10%;float:left;"></div>
                <div class="column" style="width:100%;">
                    <div style="width:50%;float:right;">
                        <input id="myInput" type="text" class="inputstyle" placeholder="search" style="float:right;border:groove;">
                    </div>
                    <div style="clear:both;"></div>
                    <div class="pageContainer">
                        <div class="scheduleTitle">
                            GroupList
                        </div>
                        <div>
                            @Html.ActionLink("ADD", "GroupDirect", "HomeController", new { @class = Session["UserOraganization"].ToString() == "KeralaStateCooperativeBank" ? "form-btn" : "scheduleButton" })
                        </div>
                    </div>
                   
                    <div style="width:100%;">
                        <div id="location">
                            <table class="table @(Session["UserOraganization"].ToString() == "KeralaStateCooperativeBank" ? "sessiontableheader" : "tableheader")" align="center" cellpadding="2" cellspacing="2">
                                <tr>
                                    <th>GroupCode</th>
                                    <th>GroupName</th>
                                    @*<th>GroupDevice</th>*@
                                    
                                    <th>Actions</th>
                                </tr>
                                <tbody id="myTable">
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.GroupCode)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.GroupName)
                                            </td>
                                            @*<td>
                                                @Html.DisplayFor(modelItem => item.GroupDeviceID)
                                            </td>*@
                                          
                                            <td>
                                                <a href="@Url.Action("GroupUpdate", "Home",new { id = item.GroupCode })" title="Edit">
                                                    <img alt="Edit" style="width:20px;height:20px;" src="@Url.Content("~/images/update.png")">

                                                </a>
                                                &nbsp;&nbsp;
                                                <a href="@Url.Action("GroupDelete", "Home",new { id = item.GroupCode })" title="Delete" onclick="return confirm('Are sure wants to delete?');">
                                                    <img alt="Delete" style="width:22px;height:20px;" src="@Url.Content("~/images/delete.png")">
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @*<div style="width:100%;">
                                <div style="width:40%;float:left;">&nbsp;</div>
                                <div class="btn btn-block" style="width:20%;float:left;margin-bottom:20px;margin-top:40px;">
                                    @Html.ActionLink("ADD", "DeviceDirect", "HomeController", new { @class = "login100-form-btn", @style = "width:150px;text-align:center;" })
                                </div>
                                <div style="width:40%;float:left;">&nbsp;</div>
                            </div>*@

                    </div>

                </div>
                <div style="width:10%;float:left;"></div>
                <div style="clear:both;"></div>
            </div>
            <div style="clear:both;"></div>
        </div>
        <script>

            $(document).ready(function () {
                $("#myInput").on("keyup", function () {
                    var value = $(this).val().toLowerCase();
                    $("#myTable tr").filter(function () {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                });
            });
        </script>
    </body>
</html>
