@model IEnumerable<TranzmitUI.Models.ScheduleMaster>

<DOCTYPE! html>
    <html>
    <head>
        <title>SCHEDULE</title>
        <meta name="viewport" content="width=device-width" />
        <link href="~/Content/Gridmvc.css" rel="stylesheet" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <script src="~/Scripts/gridmvc.js"></script>
        <script src="~/Scripts/jquery-1.9.1.min.js"></script>
        <link href="~/Content/main.css" rel="stylesheet" />
        <script src="~/Content/jquery1.10.1.min.js"></script>

    </head>
    <body style="overflow-x:hidden;">
        <div>
            <div>
                @if (ViewBag.InsertSuccess != null)
                {
                    <h2 class="responseLabel">@ViewBag.InsertSuccess</h2>
                }
                else if (ViewBag.InsertFail != null)
                {
                    <h2 class="responseLabel">@ViewBag.InsertFail</h2>
                }
                else if (ViewBag.UpdateSuccess != null)
                {
                    <h2 class="responseLabel">@ViewBag.UpdateSuccess</h2>
                }
                else if (ViewBag.UpdateFail != null)
                {
                    <h2 class="responseLabel">@ViewBag.UpdateFail</h2>
                }
            </div>
            <div class="row" style="width: 100%; align-content: center;">
                <div style="width:10%;float:left;"></div>
               
                    <div class="column" style="width:100%;">
                        <div style="width:50%;float:right;">
                            <input id="myInput" type="text" class="inputstyle" placeholder="search" style="float:right;border:groove;">
                        </div>
                        <div style="clear:both;"></div>
                        <div class="pageContainer">
                            <div class="scheduleTitle">
                              ScheduleList
                            </div>
                            <div>
                                @Html.ActionLink("ADD", "ScheduleDirect", "HomeController", new { @class = Session["UserOraganization"].ToString() == "KeralaStateCooperativeBank" ? "form-btn" : "scheduleButton" })
                            </div>
                        </div>
                        <div style="clear:both;"></div>
                        <div style="width:100%;">
                            <div id="location">
                                <table class="table  @(Session["UserOraganization"].ToString() == "KeralaStateCooperativeBank" ? "sessiontableheader" : "tableheader")" align="center" cellpadding="2" cellspacing="2">
                               
                                        <tr>
                                            <th>Code</th>
                                            <th>Type</th>
                                            <th>Schedule Date</th>
                                            <th>Schedule Time</th>
                                            <th>Device IP</th>
                                            <th>Device Port</th>
                                            <th>File  Name</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                
                                    <tbody id="myTable">
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ScheduleCode)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ScheduleType)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ScheduleDate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ScheduleTime)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DeviceIP)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DevicePort)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.SetupFile)
                                                </td>
                                                <td>
                                                    @if ((item.Flag == "C"))
                                                    {
                                                        <p class="@(Session["UserOraganization"].ToString() == "KeralaStateCooperativeBank" ? "session-btn-reschedule " : "btn-reschedule")">Completed</p>
                                                    }

                                                    else if (item.Flag == "X")
                                                    {
                                                          <p class="@(Session["UserOraganization"].ToString() == "KeralaStateCooperativeBank" ? "session-btn-reschedule " : "btn-reschedule")">Processing</p>

                                                    }
                                                    else 
                                                    {
                                                        <p class="@(Session["UserOraganization"].ToString() == "KeralaStateCooperativeBank" ? "session-btn-reschedule " : "btn-reschedule")">Pending</p>


                                                    }

                                                  
                                                </td>
                                                <td>
                                                    @*<a href="@Url.Action("ScheduleUpdate", "Home",new { id = item.ScheduleCode })" title="Edit">
                <img alt="Edit" style="width:20px;height:20px;" src="@Url.Content("~/images/update.png")">

            </a>
            &nbsp;&nbsp;*@
                                                    <a href="@Url.Action("ScheduleDelete", "Home",new { id = item.ScheduleCode })" title="Delete" onclick="return confirm('Are sure wants to delete?');">
                                                        <img alt="Delete" style="width:22px;height:20px;" src="@Url.Content("~/images/delete.png")">
                                                    </a>

                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            @*<div style="width:100%;">
                                <div style="width:40%;float:left;">&nbsp;</div>
                                <div class="btn btn-block" style="width:20%;float:left;margin-bottom:20px;margin-top:40px;">
                                    @Html.ActionLink("ADD", "ScheduleDirect", "HomeController", new { @class = "login100-form-btn", @style = "width:150px;text-align:center;" })
                                </div>
                                <div style="width:40%;float:left;">&nbsp;</div>
                            </div>*@

                        </div>

                    </div>
                    <div style="width:10%;float:left;"></div>
                    <div style="clear:both;"></div>
                </div>
            <div style="clear:both;"></div>
        </div>
        <script>

            $(document).ready(function () {
                $("#myInput").on("keyup", function () {
                    var value = $(this).val().toLowerCase();
                    $("#myTable tr").filter(function () {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                });
            });
        </script>

    </body>
</html>

