@model TranzmitUI.Models.UserMaster
@{
    ViewBag.Title = "login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" type="text/css" href="~/Content/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/main.css">
    <link href="~/Content/font-awesome-5.15.4-css-all.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="backgroundImage-Container">
                <div class="wrap-login100">
                    <div class="login100-form-title">
                        <div>
                            <span class="login100-form-title-1">
                                Tranzmit
                            </span>
                        </div>
                    </div>
                    <div class="divider">

                    </div>

                    <form class="login100-form validate-form">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="wrap-input100 validate-input m-b-26">
                                @*<span class="label-input100">USERNAME</span>*@
                                <span class="icon"><img src="@Url.Content("~/images/User.png")" alt="Username"></span>
                                @*@Html.TextBoxFor(model => Model.UserName, new { placeholder = "Enter username", @class = "input100" })*@
                                @Html.TextBoxFor(model => Model.UserName, new { placeholder = "Username", @class = "input100", required = "required"  })
                                <span class="focus-input100"></span>
                                @Html.ValidationMessageFor(model => Model.UserName)
                            </div>

                            <div class="wrap-input100 validate-input m-b-18">
                                @*<span class="label-input100">PASSWORD</span>*@
                                <span class="icon"><img src="@Url.Content("~/images/password.png")" alt="Password"></span>
                                @Html.PasswordFor(model => model.Password, new { placeholder = "Password", @class = "input100", required = "required" })
                                <span class="focus-input100"></span>
                                @*@Html.ValidationMessageFor(model => model.Password)*@
                            </div>


                            <div class="container-login100-form-btn" style="margin-top:50px;">
                                <button class="login100-form-btn1">
                                    Login
                                </button>

                            </div>
                            @*<div style="margin-top:50px;margin-left:290px;text-decoration: underline;">
                        @Html.ActionLink("Forgot Password?", "ForgotPassword", new { @id = "submit" })
                    </div>*@
                        }
                    </form>

                </div>
            </div>
        </div>
        <div>
            @*<div id="file-content" style="height:85%;overflow-x:hidden;">
                @RenderBody()
            </div>*@
            <footer>
                <div class="content-wrapper" style="height:7%;">
                    <div>
                        @Html.Partial("_Footer")
                        <p style="float:right;padding-right:20px;"> <span style="font-size:xx-small">Powered By</span> <b>NARADA &trade;</b>  </p>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    
    <script src="~/Content/jquery.1.8.3.min.js"></script>
   
    <script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/vendor/animsition/js/animsition.min.js"></script>
    <script src="~/vendor/bootstrap/js/popper.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/vendor/daterangepicker/daterangepicker.js"></script>
    <script src="~/Scripts/main.js"></script>
</body>
</html>
