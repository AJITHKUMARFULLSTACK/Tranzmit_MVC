@model IEnumerable<TranzmitUI.Models.LocationMaster>

<DOCTYPE! html>
    <html>
    <head>
        <title>LOCATION</title>
        <meta name="viewport" content="width=device-width" />
        <link href="~/Content/Gridmvc.css" rel="stylesheet" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <script src="~/Scripts/gridmvc.js"></script>
        <script src="~/Scripts/jquery-1.9.1.min.js"></script>
        <link href="~/Content/main.css" rel="stylesheet" />
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
    </head>
    <body>
        <table style="margin-top:30px">
            <tr>
                <td>
                    <div style="margin-left:400px;margin-top:30px;" id="ddlCategory">
                        @Html.DropDownList("MySkills", new List<SelectListItem>{
    new SelectListItem{ Text="LOCATION", Value = "1" },
    new SelectListItem{ Text="CITY", Value = "2" },
    new SelectListItem{ Text="STATE", Value = "3" },
    new SelectListItem{ Text="COUNTRY", Value = "4" }},new { id = "branches" })
                    </div>
                </td>
                <td></td>
                <td>
                    <input id="myInput" type="text" placeholder="Search By Name.." style="margin-left:300px;border:groove;margin-top:30px;">
                </td>
            </tr>
        </table>
        <div id="location">
            <table class="table" style="width:auto;margin-left:475px;font-size:15px;margin-top:30px;" cellpadding="2" cellspacing="2">
                <tr>
                    <th>LOCATION NAME</th>
                    <th>CITY NAME</th>
                    <th> </th>
                </tr>
                <tbody id="myTable">

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LocationName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CityName)
                            </td>
                            <td>
                                @Html.ActionLink("Update", "UpdateLocation", new { id = item.LocationId })|
                                @Html.ActionLink("Delete", "DeleteLocation", new { id = item.LocationId }, new { onclick = "return confirm('Are sure wants to delete?');" })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
        <div id="city">
            <table class="table" style="width:auto;margin-left:475px;font-size:15px;margin-top:30px;" cellpadding="2" cellspacing="2">
                <tr>
                    <th>CITY NAME</th>
                    <th>STATE NAME</th>
                    <th> </th>
                </tr>
                <tbody id="myTable">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CityName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StateName)
                            </td>
                            <td>
                                @Html.ActionLink("Update", "UpdateCity", new { id = item.CityId })|
                                @Html.ActionLink("Delete", "DeleteCity", new { id = item.CityId }, new { onclick = "return confirm('Are sure wants to delete?');" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div id="state">
            <table class="table" style="width:auto;margin-left:475px;font-size:15px;margin-top:30px;" cellpadding="2" cellspacing="2">
                <tr>
                    <th>STATE NAME</th>
                    <th>COUNTRY NAME</th>
                    <th> </th>
                </tr>
                <tbody id="myTable">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StateName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CountryName)
                            </td>
                            <td>
                                @Html.ActionLink("Update", "UpdateState", new { id = item.StateId })|
                                @Html.ActionLink("Delete", "DeleteState", new { id = item.StateId }, new { onclick = "return confirm('Are sure wants to delete?');" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div id="country">
            <table class="table" style="width:auto;margin-left:475px;font-size:15px;margin-top:30px;" cellpadding="2" cellspacing="2">
                <tr>
                    <th>COUNTRY ID</th>
                    <th>COUNTRY NAME</th>
                    <th> </th>
                </tr>
                <tbody id="myTable">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CountryId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CountryName)
                            </td>
                            <td>
                                @Html.ActionLink("Update", "UpdateCountry", new { id = item.CountryId })|
                                @Html.ActionLink("Delete", "DeleteCountry", new { id = item.CountryId }, new { onclick = "return confirm('Are sure wants to delete?');" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <div class="btn btn-block" style="margin-left:550px">
            @Html.ActionLink("ADD", "LocationDirect", "HomeController", new { @class = "btn btn-secondary btn-block" })
        </div>
        <script>
            function checkSelection() {

                $("#state").hide();
                $("#location").hide();
                $("#city").hide();
                $("#country").hide();

                var selectedItem = $(this).val();

                if (selectedItem == "1") {
                    $("#location").show();
                } else if (selectedItem == "2") {
                    $("#city").show();
                }
                else if (selectedItem == "3") {
                    $("#state").show();
                }
                else if (selectedItem == "4") {
                    $("#country").show();
                }
            };

            $(document).ready(function () {
                $("#branches").change(checkSelection);
                checkSelection.apply($("#branches"));
            });
            $(document).ready(function () {
                $("#myInput").on("keyup", function () {
                    var value = $(this).val().toLowerCase();
                    $("#myTable tr").filter(function () {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                });
            });
        </script>
    </body>
</html>
