@model IEnumerable<TranzmitUI.Models.DeviceTransmission>


<DOCTYPE! html>
    <html>
    <head>
        <title> DASHBOARD</title>
        <meta name="viewport" content="width=device-width" />
        <link href="~/Content/Gridmvc.css" rel="stylesheet" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <script src="~/Scripts/gridmvc.js"></script>
        <script src="~/Scripts/jquery-1.9.1.min.js"></script>
        <link href="~/Content/main.css" rel="stylesheet" />
    </head>
    <body>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <table style="margin-top:50px;">
                <tr>
                    <td>
                        <div style="margin-left:60px" id="ddlCategory">
                            @Html.DropDownList("FilterList", (List<SelectListItem>)ViewBag.FilterSelect)
                        </div>
                    </td>
                    <td></td>
                    <td>
                        <input id="myInput" type="text" placeholder="Search By Name.." style="margin-left:825px;border:groove;">
                    </td>
                </tr>
            </table>
            <table class="table" style="width:auto;margin-left:50px;font-size:15px;margin-top:50px;" cellpadding="2" cellspacing="2">
                <tr>
                    <th>DEVICE ID</th>
                    <th>SCHEDULE CODE</th>
                    <th>SOURCE FILE</th>
                    <th>DESTINATION FILE</th>
                    <th>STATUS</th>
                    <th>DATETIME</th>
                    <th> </th>
                </tr>
                <tbody id="myTable">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DeviceID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ScheduleID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SourcePath)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DestinationPath)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateTime)
                            </td>
                            <td>
                                @Html.ActionLink("Restart", "RestartSchedule", new { id = item.ScheduleID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
            <script>
                $(document).ready(function () {
                    $("#myInput").on("keyup", function () {
                        var value = $(this).val().toLowerCase();
                        $("#myTable tr").filter(function () {
                            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                        });
                    });
                });
            </script>
        </body>
</html>
