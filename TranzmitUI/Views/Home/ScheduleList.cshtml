@model IEnumerable<TranzmitUI.Models.ScheduleMaster>

<DOCTYPE! html>
    <html>
    <head>
        <title>SCHEDULE</title>
        <meta name="viewport" content="width=device-width" />
        <link href="~/Content/Gridmvc.css" rel="stylesheet" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <script src="~/Scripts/gridmvc.js"></script>
        <script src="~/Scripts/jquery-1.9.1.min.js"></script>
        <link href="~/Content/main.css" rel="stylesheet" />
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
    </head>
    <body>
        <div style="margin-top:30px">
            <input id="myInput" type="text" placeholder="Search By Name.." style="margin-left:1000px;border:groove;">
        </div>
        <div id="location">
            <table class="table" style="width:auto;margin-left:100px;font-size:15px;margin-top:30px;" cellpadding="2" cellspacing="2">
                <tr>
                    <th>SCHEDULE CODE</th>
                    <th>SCHEDULE TYPE</th>
                    <th>SCHEDULE DATE</th>
                    <th>SCHEDULE TIME</th>
                    <th>REPCODE</th>
                    <th>FILENAME</th>
                    <th>DIRCODE</th>
                    <th></th>
                </tr>
                <tbody id="myTable">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ScheduleCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ScheduleType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ScheduleDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ScheduleTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RepCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SetupFile)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DirCode)
                            </td>
                            <td>
                                @Html.ActionLink("Update", "ScheduleUpdate", new { id = item.ScheduleCode })|
                                @Html.ActionLink("Delete", "ScheduleDelete", new { id = item.ScheduleCode }, new { onclick = "return confirm('Are sure want to delete?');" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="btn btn-block" style="margin-left:550px">
            @Html.ActionLink("ADD", "ScheduleDirect", "HomeController", new { @class = "btn btn-secondary btn-block" })
        </div>
        <script>

            $(document).ready(function () {
                $("#myInput").on("keyup", function () {
                    var value = $(this).val().toLowerCase();
                    $("#myTable tr").filter(function () {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                });
            });
        </script>
    </body>
</html>
