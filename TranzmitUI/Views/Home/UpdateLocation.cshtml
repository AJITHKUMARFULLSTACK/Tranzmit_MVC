                    </tr>
                    <tr>
                        <td>@*@Html.LabelFor(model => model.CityId)*@CITY</td>
                        <td>@Html.DropDownList("CityName", (IEnumerable<SelectListItem>)(ViewData["City"]), "Please Select")</td>
