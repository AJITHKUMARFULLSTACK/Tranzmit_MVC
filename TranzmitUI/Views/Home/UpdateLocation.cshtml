                </table>
            </div>
        </div>
        <div class="container-login100-form-btn" style="margin-left:600px;">
            <button class="login100-form-btn">
                UPDATE
            </button>
        </div>
    }
    <script>
        $(function () {
                    $(".multiselect").multiselect();
                });
