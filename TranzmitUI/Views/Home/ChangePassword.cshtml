@model TranzmitUI.Models.UserMaster

<DOCTYPE! html>
    <html>
    <head>
        <title>PASSWORD CHANGE</title>
        <meta name="viewport" content="width=device-width" />
        <link href="~/Content/Gridmvc.css" rel="stylesheet" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <script src="~/Scripts/gridmvc.js"></script>
        <script src="~/Scripts/jquery-1.9.1.min.js"></script>
        <link href="~/Content/main.css" rel="stylesheet" />
    </head>
    <body>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="column" style="padding:15px 5px 5px 150px">
                    <table align="center" border="0" cellpadding="5" cellspacing="10" style="border-collapse: separate; border-spacing: 0 1em;">
                        <tr>
                            <td>NEW PASSWORD</td>
                            <td style="border:groove;">@Html.PasswordFor(model => model.NewPassword)</td>
                        </tr>
                        <tr>
                            <td>CONFIRM PASSWORD</td>
                            <td style="border:groove;">@Html.PasswordFor(model => model.ConfirmPassword)</td>
                        </tr>

                    </table>
                </div>
                <div class="container-login100-form-btn" style="margin-left:600px;">
                    <button class="login100-form-btn">
                        Change Password
                    </button>
                </div>
            </div>
        }
        </body>
</html>
